<?xml version="1.0"?>
<report	xmlns="http://www.w3schools.com"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	
    <htmlTitle>jxReport: create HTML Reports</htmlTitle>

    <bodyCss>
  	    <cssRule> 
  	        <ruleName>margin</ruleName>
  	        <ruleValue>0 auto</ruleValue>
  	    </cssRule>
	</bodyCss>
	
  	<cssScript>
  	    #text1 h1{ margin: 0 auto; }
  	</cssScript>
  	
  	<lineChart>
		        <title>Tachogram</title>
				
		        <showLegend>false</showLegend>
		        <showMarker>false</showMarker>
		
		        <line>
		            <lineLabel>First Line</lineLabel>
		            <lineColor>blue</lineColor>
		            <lineWidth>1</lineWidth>
		            <showLine>true</showLine>
		
		           <points>
		               <xIndex>counter</xIndex>
		               <yIndex>0</yIndex>
		           </points>
		        </line>
		        
	</lineChart>

</report>
